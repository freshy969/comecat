<ol class="breadcrumb">
  <li class="breadcrumb-item">
    <a href="/admin/home">{{l10n "Home"}}</a>
  </li>
  <li class="breadcrumb-item">
    <a href="/admin/room/list">{{l10n "Room Management"}}</a>
  </li>
  <li class="breadcrumb-item active">{{l10n "Delete"}}</li>
</ol>

<header class="header bg-ui-general">
  <div class="header-info">
    <h1 class="header-title">
      {{l10n "Delete Room"}}
      <small>{{formValues.name}}</small>
    </h1>
  </div>
</header>

<hr> {{> alertMessage }}


<div class="row">

  <div class="col-12">

    <div class="card">

      <div class="card-body">

        <form method="post" action="/admin/room/delete/{{formValues._id}}" enctype="multipart/form-data">
          <input type="hidden" name="_id" class="form-control" id="input1" value="{{formValues._id}}">

          <div class="form-group">
            <label for="input1">{{l10n "Group Name"}}</label>
            <input type="text" disabled="disabled" name="name" class="form-control" id="text1" placeholder="{{l10n "Name"}}" value="{{formValues.name}}">
          </div>

          <div class="form-group">
            <label for="input2">{{l10n "Description"}}</label>
            <textarea rows="4" disabled="disabled" name="description" class="form-control" placeholder="{{l10n "Description"}}">{{formValues.description}}</textarea>
          </div>

          {{#if formValues.avatar.thumbnail.nameOnServer}}
            <div class="row">

              <div class="col-md-6">

                <div class="form-group">

                  <label for="input3">{{l10n "Avatar"}}</label>
                  <br/>


                  <div class="card">

                    <header class="card-header">
                      <h6 class="card-title card-title-bold">{{l10n "Uploaded Image"}}</h6>
                    </header>

                    <div class="card-body text-center">
                      <img class="img-fluid rounded" src="/admin/file/{{formValues.avatar.thumbnail.nameOnServer}}" />
                    </div>

                  </div>

                </div>

              </div>

            </div>

          {{/if}}

          <button type="submit" class="btn btn-label btn-danger pull-right">
            <label>
              <i class="fa fa-floppy-o"></i>
            </label> {{l10n "Delete"}}
          </button>


        </form>

      </div>
    </div>
  </div>
</div>