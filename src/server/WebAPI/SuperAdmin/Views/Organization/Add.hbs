<ol class="breadcrumb">
  <li class="breadcrumb-item">
    <a href="/owner/home">{{l10n "Home"}}</a>
  </li>
  <li class="breadcrumb-item">
    <a href="/owner/organization/list">{{l10n "Organization Management"}}</a>
  </li>
  <li class="breadcrumb-item active">{{l10n "Add New"}}</li>
</ol>

<header class="header bg-ui-general">
  <div class="header-info">
    <h1 class="header-title">
      {{l10n "Add New Organization"}}
    </h1>
  </div>
</header>

{{> alertMessage }}

<div class="row">

  <div class="col-12">

    <div class="card">

      <div class="card-body">

        <form method="post" action="/owner/organization/add" enctype="multipart/form-data">

            {{!-- this line is to prevent google-s autofill  --}}
            <input style="display:none;" type="password" name="password" />
            
            <div class="form-group">
                <label for="input1">{{l10n "Organization Name"}}</label>
                <input type="text" name="name" class="form-control" id="input1" placeholder="{{l10n "Name"}}" value="{{formValues.name}}">
            </div>

            <div class="form-group">
                <label for="sortName">{{l10n "Sort Organization Name"}}</label>
                <input type="text" name="sortName" class="form-control" id="sortName" placeholder="{{l10n "Sort Name"}}" value="{{formValues.sortName}}">
                <p class="help-block">{{l10n "This name will be used for sorting data."}}</p>
            </div>

            <div class="form-group">
                <label for="input2">{{l10n "Organization ID"}}</label>
                <input type="text" name="organizationId" class="form-control" placeholder="{{l10n "Organization ID"}}" value="{{formValues.organizationId}}">
                <p class="help-block">{{l10n "User alphabet and numbers only. Must be more than 6 characters."}}</p>
            </div>

            <div class="form-group">
                <label for="input2">{{l10n "User Name"}}</label>
                <input type="text" name="username" class="form-control" id="input2" placeholder="{{l10n "User Name"}}" value="{{formValues.username}}">
            </div>
            
            <div class="form-group">
                <label for="input2">{{l10n "User ID"}}</label>
                <input type="text" name="userid" class="form-control" id="input2" placeholder="{{l10n "User ID"}}" value="{{formValues.userid}}">
                <p class="help-block">{{l10n "User alphabet and numbers only. Must be more than 6 characters."}}</p>
            </div>
            
            <div class="form-group">
                <label for="input3">{{l10n "Password"}}</label>
                <input type="password" name="password" class="form-control" id="input3" placeholder="{{l10n "Password"}}" value="{{formValues.password}}">
                <p class="help-block">{{l10n "User alphabet and numbers only. Must be more than 6 characters."}}</p>
            </div>

            <div class="form-group">
                <label for="input4">{{l10n "Max User Number"}}</label>
                <input type="text" name="maxUserNumber" class="form-control" id="input4" placeholder="{{l10n "100"}}" value="{{formValues.maxUserNumber}}">
            </div>

            <div class="form-group">
                <label for="input5">{{l10n "Max Group Number"}}</label>
                <input type="text" name="maxGroupNumber" class="form-control" id="input5" placeholder="{{l10n "100"}}" value="{{formValues.maxGroupNumber}}">
            </div>

            <div class="form-group">
                <label for="input6">{{l10n "Max Room Number"}}</label>
                <input type="text" name="maxRoomNumber" class="form-control" id="input6" placeholder="{{l10n "1000"}}" value="{{formValues.maxRoomNumber}}">
            </div>

            <div class="form-group">
                <label for="input7">{{l10n "Disk Quota (GB)"}}</label>
                <input type="text" name="diskQuota" class="form-control" id="input7" placeholder="{{l10n "10"}}" value="{{formValues.diskQuota}}">
            </div>

            <div class="form-group">
                <label>{{l10n "E-mail"}}</label>
                <input type="email" name="email" class="form-control" placeholder="{{l10n "E-mail"}}" value="{{formValues.email}}">
            </div>


            <div class="form-group">
                <label for="input8">{{l10n "Status"}}</label>
                <br/>

                <label class="custom-control custom-radio">
                    <input type="radio" class="custom-control-input" name="status" value="1" {{{checkedIfEqual formValues.status 1}}} />
                    <span class="custom-control-indicator"></span>
                    <span class="custom-control-description">{{l10n "Enabled"}}</span>
                </label>

                <label class="custom-control custom-radio">
                    <input type="radio" class="custom-control-input" name="status" value="0" {{{checkedIfEqual formValues.status 0}}} />
                    <span class="custom-control-indicator"></span>
                    <span class="custom-control-description">{{l10n "Disabled"}}</span>
                </label>
                    
            </div>

            <div class="row">
                <div class="col-md-6">    
                    <div class="form-group">

                        <label>{{l10n "Logo"}}</label><br/>

                        <div class="input-group file-group">
                            <input type="text" class="form-control file-value" placeholder="Choose file..." readonly="">
                            <input type="file" name="file">
                            <span class="input-group-btn">
                                <button class="btn btn-light file-browser" type="button"><i class="fa fa-upload"></i></button>
                            </span>
                        </div>

                        <p class="help-block">{{getImageNote}}</p>

                    </div>     
                </div>
            </div>

            <button type="submit" class="btn btn-label btn-primary pull-right">
                <label><i class="fa fa-floppy-o"></i></label> {{l10n "Save"}}
            </button>

        </form>

      </div>

    </div>

  </div>

</div>
